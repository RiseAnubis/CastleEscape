<Window x:Class="CastleEdit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CastleEdit"
        xmlns:classes="clr-namespace:CastleEdit.Classes"
        mc:Ignorable="d"
        Title="Castle Edit" MinHeight="350" MinWidth="525" WindowState="Maximized">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- evtl. Toolbar nutzen -->
        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="Spiel">
                <MenuItem Header="Neu..."/>
                <MenuItem Header="Laden..."/>
                <Separator/>
                <MenuItem Header="Beenden"/>
            </MenuItem>
            <MenuItem Header="Räume">
                <MenuItem Name="miNewRoom" Header="Neuen Raum erstellen..." Click="miNewRoom_Click"/>
                <MenuItem Header="Ausgewählten Raum löschen"/>
            </MenuItem>
            <MenuItem Header="Items">
                <MenuItem Name="miNewItem" Header="Neues Item erstellen..." Click="miNewItem_Click"/>
                <MenuItem Header="Ausgewähltes Item bearbeiten..."/>
                <MenuItem Header="Ausgewähltes Item löschen"/>
            </MenuItem>
        </Menu>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <StackPanel.Resources>
                <classes:Item x:Key="item"/>
            </StackPanel.Resources>
            <GroupBox Header="Items" Height="400" Margin="4">
                <DataGrid Name="dgItems" DataContext="{StaticResource item}" GridLinesVisibility="None">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" MinWidth="50" Binding="{Binding ID}"/>
                        <DataGridTextColumn Header="Name" MinWidth="100" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Beschreibung" MinWidth="100" Width="*" Binding="{Binding Description}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <GroupBox Header="Ausgänge" Margin="4">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Norden" Width="50"/>
                    <Button Content="Süden" Width="50"/>
                    <Button Content="Osten" Width="50"/>
                    <Button Content="Westen" Width="50"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <ScrollViewer Grid.Column="1" Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Canvas Name="canvasRooms">
                
            </Canvas>
        </ScrollViewer>
        <StatusBar Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2">
            <StatusBarItem>
                Levelgröße
            </StatusBarItem>
            <StatusBarItem>
                Items
            </StatusBarItem>
            <StatusBarItem>
                Aktueller Raum
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
