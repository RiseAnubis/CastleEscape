<UserControl x:Class="CastleEdit.RoomControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CastleEdit"
             mc:Ignorable="d" 
             Width="290" Height="290" Focusable="True">
    <Border BorderThickness="2" BorderBrush="Black" Background="Transparent" Name="border">
        <Grid Name="mainGrid" Background="Teal">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Polygon Name="dirNorth" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" Points="25,0 0,50 50,50" Fill="LawnGreen" Visibility="Hidden" local:MovingTooltip.Tooltip="Nördlicher Ausgang"/>
            <Polygon Name="dirSouth" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" Points="25,0 0,50 50,50" Fill="LawnGreen" Visibility="Hidden" local:MovingTooltip.Tooltip="Südlicher Ausgang">
                <Polygon.LayoutTransform>
                    <RotateTransform Angle="180"/>
                </Polygon.LayoutTransform>
            </Polygon>
            <Polygon Name="dirWest" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Points="25,0 0,50 50,50" Fill="LawnGreen" Visibility="Hidden" local:MovingTooltip.Tooltip="Westlicher Ausgang">
                <Polygon.LayoutTransform>
                    <RotateTransform Angle="270"/>
                </Polygon.LayoutTransform>
            </Polygon>
            <Polygon Name="dirEast" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Points="25,0 0,50 50,50" Fill="LawnGreen" Visibility="Hidden" local:MovingTooltip.Tooltip="Östlicher Ausgang">
                <Polygon.LayoutTransform>
                    <RotateTransform Angle="90"/>
                </Polygon.LayoutTransform>
            </Polygon>
            <Grid Grid.Row="1" Grid.Column="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Name="txt_RoomName"/>
                    <TextBlock Name="txt_Items"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
