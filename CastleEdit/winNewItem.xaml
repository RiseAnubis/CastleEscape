<Window x:Class="CastleEdit.winNewItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CastleEdit"
        mc:Ignorable="d"
        Title="Neues Item erstellen" Height="300" Width="500" ResizeMode="NoResize">
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" Content="ID"/>
        <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" Content="Name"/>
        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" Content="Beschreibung"/>
        <TextBox Grid.Column="1" Grid.Row="0" Margin="0,2,0,2" Name="tbID" ToolTip="Eine eindeutige ID für das Item"/>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="0,2,0,2" Name="tbName" ToolTip="Der Name des Items, der im Spiel angezeigt wird"/>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="0,2,0,0" Name="tbDescription" TextWrapping="Wrap" ToolTip="Eine Beschreibung des Items"/>
        <StackPanel Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
            <Button Name="btnOK" Content="OK" Width="100" IsDefault="True" Click="btnOK_Click"/>
            <Button Name="btnCancel" Content="Abbrechen" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
